extends layout

block headBlock
	title Stats: Home

block content
	if (session.username)
		h1 Home
		hr

		.card.mb-5
			.card-body
				a.btn.btn-primary(href="/project/new") New Project

		h5 My Projects
		hr

		ol
			each project in projects
				li
					a(href=`/project/${project.id}`) #{project.name}
				

	else
		h1 #{appConfig.siteName}
		hr

		h5 Welcome to #{appConfig.siteName}. If you have an account, login below. If not, you can 
			a(href="/signup") Sign up
			| .

		.row.mt-5
			.col-md-3.col-lg-3
			.col-md-6.col-lg-6
				include ./shared/login-form.pug