form(method="post", action="/login")

	fieldset.form-group
		label(for="username") Username
		input.form-control(id="username", name="username", type="text", placeholder="username", required="true")

	fieldset.form-group
		label(for="password") Password
		input.form-control(id="password", name="password", type="password", placeholder="password")
	
	fieldset.form-group
		label(for="rememberme")
			input.mr-2(id="rememberme", name="rememberme", type="checkbox")
			| Stay logged in
		

	button.btn.btn-primary.btn-block(type="submit") Login